<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!-- Theme.AppCompat.Light -->
    <style name="BaseTheme" parent="BaseAppTheme">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="DarkTheme" parent="DarkAppTheme">
        <item name="android:colorPrimary">@color/colorBackgroundDark</item>
        <item name="android:actionMenuTextAppearance">@android:color/primary_text_dark</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
    </style>

    <style name="BlackTheme" parent="BlackAppTheme">
        <item name="android:colorPrimary">@color/colorBackgroundBlack</item>
        <item name="android:colorBackground">@color/colorBackgroundBlack</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

</resources>